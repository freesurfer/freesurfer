#$bin -mask $sdir/brain -fsamples $sdir/fsamples -norm $sdir/norm $sdir/orig $GCA $sdir/transforms/$LTA
$bin -mask $sdir/brain $sdir/orig $GCA $sdir/transforms/$LTA

