  cat $0 | \
    awk 'BEGIN{prt=0}{if(prt) print $0; if($1 == "BEGINHELP") prt = 1 }'
else
  echo "Usage: infant_recon_all --s <subj> --age <age_in_months>"
  echo "Help:  infant_recon_all --help"
endif

exit 1;

