-- -*- lua -*-

require "io"
require "os"
require( "tools.freesurfer" )

-- Make access to the FreeSurfer module quicker
local FS = tools.freesurfer

local inputFiles = FS.AllGCAMfiles()

local myAvgs = { 1, 4 }

local function testName( testNum, avg )

   return testNum.."-"..avg
end


-- Generate a table of subtests
local function testGen( inputs, avgs )
   local testTable = {}

   for i,input in ipairs(inputs) do
      for a,avg in ipairs(avgs) do
	 local tName = testName( input, avg )
	 table.insert( testTable, { id=tName,
				    input=FS.GCAMdir()..input,
				    avg=avg } )
      end
   end

   return testTable
end


-- Table required by tm itself
testdescript = {

   -- Lengthier description of the test
   description = [[
	 Testing of gcamSmoothGradient
   ]],

   -- Keywords (for subtest selection)
   keywords = { "gcam", "basic" },

   -- Designate the test as active
   active = 1,

   -- The test name
   testName = "GCAM_SmoothGradient_Test",

   -- The script to run the test case
   runScript = [[
	 export INPUT="$(input)"
	 export CPUOUT="$(outputDir)/$(id).cpu"
	 export GPUOUT="$(outputDir)/$(id).gpu"

	 echo $INPUT

	 

	 ${TM_BIN_DIR}/gcam_smoothgradient_test      \--input=$INPUT \
                                                     \--output=$CPUOUT \
	                                             \--navgs=$(avg)
         echo

	 ${TM_BIN_DIR}/gcam_smoothgradient_test_cuda \--input=$INPUT \
                                                     \--output=$GPUOUT \
	                                             \--navgs=$(avg)
         echo


	 $(projectDir)/tools/gcamMultiDiff.pl \--results=$(cmdResultFn) \
	                                      \--gold="$CPUOUT.nc" \
                                              \--cmp="$GPUOUT.nc" \
                                              \--config=$(testDir)/smoothgradient.config

         if [ ! -e $(testDir)/keepResults ]; then
             rm "$CPUOUT.nc"
             rm "$GPUOUT.nc"
         fi

	 testFinish -c $(cmdResultFn) -r $(resultFn) -t $(runtimeFn)
   ]],

   -- The list of tests to run
   tests = testGen( inputFiles, myAvgs )
}
