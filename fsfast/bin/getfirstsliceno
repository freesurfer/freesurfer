source $FREESURFER_HOME/sources.csh

if($#argv != 1) then
  echo "USAGE: getfirstsliceno stem"
  echo 'getfirstsliceno @FS_VERSION@';
  exit 1;
endif

set stem = $argv[1];
@ fs = 0;
set stop = 0;
while( ! $stop)
  set fname = `printf %s_%03d.hdr $stem $fs`;
  if( -e $fname ) break;

  @ fs = $fs + 1;
  if($fs > 50) then
    echo "ERROR: cannot find any files with $stem";
    exit 1;
  endif

end

echo $fs

exit 0;
